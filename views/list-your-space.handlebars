<!doctype html>
<html>
<head>
  {{> globalHead}}
  <link rel="stylesheet" type="text/css" href="/css/list-your-space.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
</head>
<body>
  {{> globalNavigation}}
  <div class="wrap">
    <h3 class="text-center">What type of space do you want to list?</h3>
    <div id="entireHomeBtn"class="btn btn-default text-center">Entire Home</div>
    <div id="entireHomePanel">
      <!--form id="entireHome" role="form" method="get" action="JavaScript:handleClick()"-->
      <form id="entireHomeForm" name="entireHomeForm" role="form" method="get" onsubmit="return onsubmitform();">
        <div class="form-group">
          <label>What city is your apartment located in?</label>
          <input type="text" class="form-control" name="city" placeholder="Berlin">
        </div>
        <div class="form-group">
          <label>Number of bedrooms</label>
          <input type="number" class="form-control" min="0" max="10" name="bed" placeholder="2 Bedrooms">
        </div>
        <div class="form-group">
          <label>Number of bathrooms</label>
          <input type="number" class="form-control" min="0" max="10" name="bath"placeholder="1 bathroom">
        </div>
        <div class="form-group">
          <label>What's the maximum number of occupants?</label>
          <input type="number" class="form-control" min="1" max="20" name="occupants" placeholder="3">
        </div>
        <input type="submit" class="btn btn-default" value="Next"></input>
      </form>
    </div>

    <div id="privateRoomBtn"class="btn btn-default text-center">Private Room in your home</div>
    <div id="privateRoomPanel">
      <form id="privateRoomForm" name="privateRoomForm" role="form" method="get" onsubmit="return onsubmitform();">
        <div class="form-group">
          <label>What city is your apartment located in?</label>
          <input type="text" class="form-control" name="city" placeholder="Berlin">
        </div>
        <div class="form-group">
          <label>Number of bathrooms</label>
          <input type="number" class="form-control" min="0" max="10" name="bath"placeholder="1 bathroom">
        </div>
        <div class="form-group">
          <label>What's the maximum number of occupants?</label>
          <input type="number" class="form-control" min="1" max="20" name="occupants" placeholder="3">
        </div>
        <input type="submit" class="btn btn-default" value="Next"></input>
      </form>
    </div>
  </div>
  {{> globalBottomScripts}}
  <script type="text/javascript" src="/js/listYourSpace.js"></script>
</body></html>
